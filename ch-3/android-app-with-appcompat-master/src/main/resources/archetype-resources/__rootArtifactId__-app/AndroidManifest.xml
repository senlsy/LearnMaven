#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="${version}" package="${package}">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="${android-api-level}"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:name="${package}.HelloAndroidActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
